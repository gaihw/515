<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.test.dao.account.AccountDao">
    <resultMap id="BaseResultMap" type="com.test.domain.Account">
        <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="currency_id" property="currencyId" />
        <result column="available" property="available" />
        <result column="hold" property="hold" />
        <result column="status" property="status" />
        <result column="created_date" property="createDate" />
        <result column="modify_date" property="createDate" />
    </resultMap>
    <sql id="Base_Column_List_UserInfo">
        *
    </sql>
    <select id="findByUserId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List_UserInfo" />
        from tb_account_info
        where user_id = #{userId}
    </select>
<insert id="depositAccount" parameterType="com.test.domain.Account">
    insert into
    tb_account_info(user_id,currency_id,available)
    values
    (#{userId},#{currencyId},#{available})
</insert>

<update id="updateAccount" parameterType="com.test.domain.Account">
    update
    tb_account_info
    set
    <if test="available != 0 and '' != available">
        available = #{available}
    </if>
    where
    user_id = #{userId} and currency_id = #{currencyId}
</update>
