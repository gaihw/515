<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>tbex-framework-monitor</artifactId>
        <groupId>com.tbex</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <artifactId>tbex-framework-monitor-agent</artifactId>
    <version>1.2-SNAPSHOT</version>

    <dependencies>

        <dependency>
            <groupId>org.apache.kafka</groupId>
            <artifactId>kafka-clients</artifactId>
            <version>2.2.0</version>
        </dependency>

        <dependency>
            <groupId>com.alibaba</groupId>
            <artifactId>fastjson</artifactId>
            <version>1.2.56</version>
        </dependency>

        <!-- apache工具包 -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.7</version>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-validator</artifactId>
        </dependency>

        <dependency>
            <groupId>org.glassfish</groupId>
            <artifactId>javax.el</artifactId>
        </dependency>

    </dependencies>

    <!-- 根据不同环境注入不同的值  -->
    <profiles>
        <profile>
            <id>dev</id>
            <!-- 需要注入的属性值开始 -->
            <properties>
                <collect.topic>collect-dev</collect.topic>
                <bootstrap.servers>192.168.200.156:9092</bootstrap.servers>
            </properties>
            <!-- 需要注入的属性值结束 -->
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>test</id>
            <!-- 需要注入的属性值开始 -->
            <properties>
                <collect.topic>>collect-one</collect.topic>
                <bootstrap.servers>192.168.200.156:9092</bootstrap.servers>
            </properties>
            <!-- 需要注入的属性值结束 -->
        </profile>
        <profile>
            <id>prod</id>
            <!-- 需要注入的属性值开始 -->
            <properties>
                <collect.topic>collect-one</collect.topic>
                <bootstrap.servers>192.168.200.156:9092</bootstrap.servers>
            </properties>
            <!-- 需要注入的属性值结束 -->
        </profile>
    </profiles>

    <build>

        <resources>
            <resource>
                <directory>src/main/resources/</directory>
                <filtering>true</filtering>
            </resource>
        </resources>


        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>aliyun</id>
            <url>https://maven.aliyun.com/repository/public</url>
        </repository>
    </repositories>

</project>