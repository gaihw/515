package com.uiPackage.utils;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class ExcuteCommand {
	static Process process;
	public static void  excuteCmd(String cmd){
        StringBuilder stringBuilder = new StringBuilder();
         
        try {
            process = Runtime.getRuntime().exec(cmd);
 
//            BufferedReader bufferedReader = new BufferedReader(new InputStreamReader(process.getErrorStream()));
            BufferedReader bufferedReader = new BufferedReader(new InputStreamReader(process.getInputStream()));
 
            String line = "";
            while ((line = bufferedReader.readLine()) != null) {
                stringBuilder.append(line + "\r\n" );
            }
 
            bufferedReader.close();
            process.destroy();
        } catch (IOException e) {
            // TODO: handle exception
             
            System.err.println(e);
        }
        System.out.println(stringBuilder);
    }
	public static void main(String[] args) throws InterruptedException {
//		excuteCmd("ifconfig");
//		excuteCmd("ls help");
		
		excuteCmd("mv /Users/gaihongwei/tools/eclipse/workspace/uiProject/screenshot/*.png /Users/gaihongwei/tools/eclipse/workspace/uiProject/screenshotCopy/");
		process.waitFor();
//		excuteCmd("ls /Users/gaihongwei/tools/eclipse/workspace/uiProject/screenshot/");
		excuteCmd("ls /Users/gaihongwei/tools/eclipse/workspace/uiProject/screenshotCopy/");
	}
}
