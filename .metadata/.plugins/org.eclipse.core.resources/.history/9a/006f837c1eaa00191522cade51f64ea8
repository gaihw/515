package com.uiPackage.test;

import java.util.concurrent.TimeUnit;

import org.testng.annotations.Test;

import com.uiPackage.config.Config;
import com.uiPackage.utils.BaseUtils;

public class LoginTest extends BaseUtils{
   // @Test
    public void login() throws Exception{
        driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);//隐式等待
//        xpath("//*[@text='跳过']").click();
        xpath("//*[@text='我的']").click();
        xpath("//*[@text='请登录']").click();
        id("com.tbex.trader:id/edtAccount").clear();
        id("com.tbex.trader:id/edtAccount").sendKeys(Config.PHONE_NUMBER);
        id("com.tbex.trader:id/inputEditTextPassWord").clear();
        id("com.tbex.trader:id/inputEditTextPassWord").sendKeys(Config.PHONE_PASSWORD);
        id("com.tbex.trader:id/btnLogin").click();       
    }
   // @Test(dependsOnMethods = "login")
    public void contract() {
    	xpath("//*[@text='合约']").click();
    	id("com.tbex.trader:id/rbRegular").click();
    	id("com.tbex.trader:id/radioButtonBuy").click();
    	id("com.tbex.trader:id/v_editor_price").clear();
    	id("com.tbex.trader:id/v_editor_price").sendKeys("9591.49");
    	id("com.tbex.trader:id/v_editor_size").clear();
    	id("com.tbex.trader:id/v_editor_size").sendKeys("100");
    	xpath("//*[@text='开多']").click();
    	id("com.tbex.trader:id/confirmView").click();
    }
    //@Test//(dependsOnMethods = "login")
    public void logout() {
    	driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
    	xpath("//*[@text='我的']").click();
    	id("com.tbex.trader:id/img_setting").click();
    	id("com.tbex.trader:id/submitView").click();
    	id("android:id/button1").click();
//    	xpath("//*[@text='确定']").click();
    	
    }
    @Test(enabled = true)
    public void aa() {
    	System.out.println("ffasdfsa");
    }
}
